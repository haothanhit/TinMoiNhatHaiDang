<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_main"
            android:layout_width="@dimen/item_img_size_width"
            android:layout_height="@dimen/item_img_size_height"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen5dp"
            app:cardCornerRadius="@dimen/dimen4dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen80dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/card_main"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen18dp"
                android:layout_marginTop="@dimen/dimen1dp"
                android:layout_marginBottom="@dimen/dimen1dp"
                android:background="@drawable/bg_view_loader_rcv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen18dp"
                android:layout_marginTop="@dimen/dimen1dp"
                android:layout_marginRight="@dimen/dimen10dp"
                android:layout_marginBottom="@dimen/dimen1dp"
                android:background="@drawable/bg_view_loader_rcv" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen18dp"
                android:layout_marginTop="@dimen/dimen1dp"
                android:layout_marginBottom="@dimen/dimen1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen18dp"
                android:layout_marginTop="@dimen/dimen1dp"
                android:layout_marginBottom="@dimen/dimen1dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen18dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_view_loader_rcv" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen18dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>