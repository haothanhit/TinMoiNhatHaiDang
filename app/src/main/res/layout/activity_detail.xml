    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:descendantFocusability="blocksDescendants"-->
    <!--        ads:adSize="BANNER"-->
    <!--        ads:adUnitId="@string/ad_banner" />-->

</RelativeLayout>