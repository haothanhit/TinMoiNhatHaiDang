<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50dp"
      >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen50dp"
          >

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_20" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progress_bar_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scroll_relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frame_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen180dp"
                android:visibility="gone">

                <com.universalvideoview.UniversalVideoView
                    android:id="@+id/videoView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    app:uvv_autoRotation="false"
                    app:uvv_fitXY="false" />

                <ImageView
                    android:id="@+id/img_thumb"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop" />

                <com.universalvideoview.UniversalMediaController
                    android:id="@+id/media_controller"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:uvv_scalable="false" />

                <ImageButton
                    android:id="@+id/button_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/playbutton" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/frame_video"
                tools:visibility="visible"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <WebView
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/webView1"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@+id/webView1"
                        android:id="@+id/recycler_view_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                    <WebView
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_below="@+id/recycler_view_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/webView2"/>
                    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/adView_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/webView2"
                        android:descendantFocusability="blocksDescendants"
                        ads:adSize="MEDIUM_RECTANGLE"
                        ads:adUnitId="@string/ad_banner" />

                    <RelativeLayout
                        android:id="@+id/relative_relate"
                        android:layout_below="@id/adView_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen1dp"
                            android:layout_marginTop="@dimen/dimen10dp"
                            android:layout_marginBottom="@dimen/dimen10dp"
                            android:background="#414141" />

                        <TextView
                            android:id="@+id/txt_tin_khac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/line"
                            android:layout_marginLeft="@dimen/dimen8dp"
                            android:layout_marginBottom="@dimen/dimen8dp"
                            android:gravity="center"
                            android:text="Xem ThÃªm"
                            android:textSize="@dimen/text_size_25"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_relate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/txt_tin_khac"
                            android:nestedScrollingEnabled="false"
                            android:layout_marginBottom="@dimen/dimen5dp"/>
                        <com.google.android.gms.ads.AdView
                            xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/ad_View_End"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/recycler_view_relate"
                            android:layout_centerHorizontal="true"
                            android:descendantFocusability="blocksDescendants"
                            ads:adSize="SMART_BANNER"
                            ads:adUnitId="@string/ad_banner">

                        </com.google.android.gms.ads.AdView>
                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>
