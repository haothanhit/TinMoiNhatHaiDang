<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_item_Relate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewRelate"
                android:layout_width="@dimen/img_size_relate"
                android:layout_height="@dimen/img_size_relate"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="5dp"
               >

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_relate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:scaleType="fitXY"/>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txt_title_relate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/cardviewRelate"
                android:text="Title"
                android:lines="3"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_source_relate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title_relate"
                android:layout_toEndOf="@+id/cardviewRelate"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Source"
                android:textSize="15dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>