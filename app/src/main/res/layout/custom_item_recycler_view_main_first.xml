<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen220dp"
        app:cardCornerRadius="@dimen/dimen4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_item_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ivPlayVideoMain"
                android:layout_width="@dimen/dimen65dp"
                android:layout_height="@dimen/dimen65dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_play_video"
                android:visibility="gone" />
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_alignParentBottom="true"
                 android:background="#60000000">
                 <TextView
                     android:id="@+id/txt_title_item_main"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_above="@+id/txt_source_item_main"
                     android:layout_marginLeft="@dimen/dimen5dp"
                     android:layout_marginTop="@dimen/dimen5dp"
                     android:ellipsize="end"
                     android:fontFamily="sans-serif"
                     android:textStyle="bold"
                     android:maxLines="3"
                     android:text="Tieu de"
                     android:textColor="@color/white"
                     android:textSize="@dimen/text_size_17" />


                 <TextView
                     android:id="@+id/txt_source_item_main"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/dimen5dp"
                     android:lines="1"
                     android:layout_marginLeft="@dimen/dimen5dp"
                     android:text="Nguon"
                     android:fontFamily="sans-serif"
                     android:textColor="@color/white"
                     android:textSize="@dimen/text_size_12"
                     android:layout_marginBottom="@dimen/dimen10dp"
                     />
             </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>