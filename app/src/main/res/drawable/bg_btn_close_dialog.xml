<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_white" />
            <corners android:radius="@dimen/dimen8dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#027a33"
                android:centerColor="#027e35"
                android:endColor="#029740" />
            <corners android:radius="@dimen/dimen8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#03b04b"
                android:centerColor="#03c956"
                android:endColor="#03e260" />
            <corners android:radius="@dimen/dimen8dp" />
        </shape>
    </item>
</selector>
