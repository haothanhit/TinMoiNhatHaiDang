<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_white" />
            <corners android:radius="@dimen/dimen8dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#45b314"
                android:centerColor="#4ecf17"
                android:endColor="#78eb47" />
            <corners android:radius="@dimen/dimen8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="#78eb47"
                android:centerColor="#9af075"
                android:endColor="#bcf5a3" />
            <corners android:radius="@dimen/dimen8dp" />
        </shape>
    </item>
</selector>
